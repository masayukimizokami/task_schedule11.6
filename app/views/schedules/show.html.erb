<div class="main_container">
  <div class="information">
    <h2>スケジュール詳細</h2>
  </div>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @schedule.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @schedule.start_day %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @schedule.end_day %></td>
      </tr>
      <tr>
        <th>終日</th>
        <% if @schedule.all_day == true %>
        ○
        <% else @schedule.all_day == false %>
        <% end %>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @schedule.memo %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "ユーザー情報一覧に戻る", schedules_path %></li>
      </ul>
    </div>
</div>